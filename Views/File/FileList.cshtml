@model List<FileHosting.Models.Database.File>

@{
    ViewData["Title"] = "Meine Dateien";
}

<h2>Meine Dateien</h2>

<table class="table">
    <thead>
    <tr>
        <th>Dateiname</th>
        <th>Dateityp</th>
        <th>Größe</th>
        <th>Upload-Datum</th>
        <th>Aktion</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var file in Model)
    {
        <tr>
            <td>@file.OriginalName</td>
            <td>@file.ContentType</td>
            <td>@(file.FileSize / 1024) KB</td>
            <td>@file.UploadDate?.ToString("dd.MM.yyyy HH:mm")</td>
            <td>
                <a asp-action="Download" asp-route-id="@file.Id">Download</a>
            </td>
        </tr>
    }
    </tbody>
</table>